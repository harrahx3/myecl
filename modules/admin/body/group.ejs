<div class="content">
	<div class="main-content">
		<div class="profile active" id="profile-tab">
			<div class="row">
				<div class="col-md-offset-3 col-md-6">
					<div id="informationsGroup">
						<h3><i class="fa fa-square"></i> Informations du groupe</h3>
						<p class="data-row">
							<span class="data-name">Nom du groupe</span>
							<span class="data-value">
								<%=name%></span>
						</p>
						<p class="data-row">
							<span class="data-name">Description</span>
							<span class="data-value"><textarea id="inputDescription" class="form-control"><%=description%></textarea></span>
						</p>
						<div class="row">
							<div class="col-md-6">
								<a href="#" id="updateGroup" class="btn btn-custom-secondary"><i class="fa fa-file"></i> Mettre à jour</a>
							</div>
							<div class="col-md-6">
								<a href="#" id="deleteGroup" class="btn btn-custom-primary"><i class="fa fa-minus-circle"></i> Supprimer</a>
							</div>
						</div>
					</div>
					<br>
					<div id="listMembers">
						<h3><i class="fas fa-square"></i> Membres du groupe
							(
							<%=members.length %> )</h3>
						<ul class="list-unstyled activity-list">
							<% for(let i in members){ %>
							<li>
								<%=members[i].name%>
								<%=members[i].firstname%> (
								<%=members[i].nick%> )
								<a id="<%=members[i].id%>" class="btn btn-link btn-xs removeMember"><i class="fas fa-user-times"></i></a>
								<span class="timestamp">
									<%=members[i].position%></span>
							</li>
							<% } %>
						</ul>
					</div>
					<div id="addMemberForm">
						<h3><i class="fas fa-square"></i> Ajouter un membre</h3>
						<div class="col-md-4"><input type="text" class="form-control" name="position" id="position" size="20" placeholder="En tant que ..."></div>
						<div class="col-md-4"><input type="text" class="form-control" name="term" id="term" size="20" placeholder="Année ..."></div>
						<div class="col-md-4"><input type="checkbox" id="isVPCom" name="isVPCom" value="1" class="checkbox"><label for="isVPCom"> VP Com (coché donne le droit de poster sur AQH) </label></div><br><br>
						<div class="col-md-12"><input type="text" class="form-control" name="search" id="search" size="20" placeholder="Rechercher l'utilisateur ..."></div>
						<div id="error"></div>
						<div id="results"></div>
					</div>
					<br><br><br>
					<input hidden id="groupId" value="<%=id%>">

					<a href="javascript:relocate('internal', 'admin', 'home');" class="btn btn-default">Retour aux groupes</a>
				</div>
			</div>
		</div>
	</div>
</div>
